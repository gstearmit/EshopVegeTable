                    </a></li>
            <?php endforeach; ?>

            <!-- Next page link -->
            <li <?php echo!isset($this->next) ? 'class="disabled"' : ''; ?>>
                <a href="<?php echo $this->url($this->route);?>page/<?php echo $this->next.'?keyword='.$_GET['keyword']; ?>">&rsaquo;</a></li>
            <!-- Last page link -->
            <li <?php echo!isset($this->next) ? 'class="disabled"' : ''; ?>>
                <a href="<?php echo $this->url($this->route);?>page/<?php echo $this->last.'?keyword='.$_GET['keyword']; ?>">&raquo;</a></li>
        </ul>
  
<?php endif; ?>